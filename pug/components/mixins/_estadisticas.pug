mixin caja--estadistica(imagen, category, title, summary)
	.caja
		.caja__imagen: img(src="../assets/images/"+imagen)
		.caja__contenido
			span.caja__categoria=category
			h3=title
			p=summary
		+estadistica

mixin caja-stats(imagen, category, title, summary)
	.caja
		a(href="articulo.html",class="caja__imagen"): img(src="../assets/images/"+imagen)
		.caja__contenido
			span.caja__categoria=category
			h3=title
			p=summary
		+estadistica

mixin estadistica
	.estadistica--articulos: ul
		li
			i.fas.fa-share
			span 275
		li
			i.fas.fa-eye
			span 275
		li
			i.fas.fa-comment-alt
			span 12	

mixin estadistica--caja-con-fondo
	.caja--con-fondo__stats: ul
		li
			i.fas.fa-share
			span 275
		li
			i.fas.fa-eye
			span 275
		li
			i.fas.fa-comment-alt
			span 12

mixin caja--con-fondo-grande (imagen, categoria, titulo, contenido)
	a(href="articulo.html" class="caja--con-fondo caja--grande")
